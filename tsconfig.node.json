{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "target": "ES2020",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "noImplicitAny": false
  },
  "include": ["vite.config.ts", "electron/**/*.ts"]
}