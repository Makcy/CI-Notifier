{
  "name": "gitlab-ci-notifier",
  "version": "1.0.0",
  "description": "GitLab CI/CD 流水线状态监控桌面应用",
  "main": "dist-electron/main.js",
  "type": "module",
  "author": "Your Name",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build && electron-builder",
    "build:web": "vue-tsc && vite build",
    "build:electron": "electron-builder",
    "electron": "wait-on tcp:5173 && cross-env NODE_ENV=development electron .",
    "electron:serve": "concurrently -k \"npm run dev\" \"npm run electron\"",
    "electron:build": "npm run build:web && electron-builder",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit"
  },
  "dependencies": {
    "vue": "^3.4.0",
    "vue-router": "^4.2.5",
    "pinia": "^2.1.7",
    "element-plus": "^2.4.4",
    "axios": "^1.6.2",
    "electron-store": "^8.1.0",
    "@element-plus/icons-vue": "^2.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/electron": "^1.6.10",
    "@vitejs/plugin-vue": "^4.4.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "unplugin-auto-import": "^0.17.2",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^4.5.0",
    "vite-plugin-electron": "^0.28.1",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^1.8.25",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.yourcompany.gitlab-ci-notifier",
    "productName": "GitLab CI Notifier",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}